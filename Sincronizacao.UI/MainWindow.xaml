<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:SincronizacaoMusical.UI" xmlns:control="clr-namespace:LoadingControl.Control"
        xmlns:multiSelectComboBox="clr-namespace:MultiSelectComboBox"
        x:Name="Principal"
        mc:Ignorable="d" x:Class="SincronizacaoMusical.UI.MainWindow" Title="Sincronização Musical" WindowState="Maximized" Height="auto" Width="auto" 
        MinWidth="1000" MinHeight="700"  Loaded="Window_Loaded" Icon="/SincronizacaoMusical.UI;component/Images/music.png" d:DesignWidth="1152" 
        d:DesignHeight="871" Closing="Window_Closing" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/GridStyle.xaml"/>
                <ResourceDictionary Source="Resources/MultiCombo.xaml"/>
                <ResourceDictionary Source="Resources/RightAlignedColumn.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ui:EnumMatchToBooleanConverter x:Key="enumConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#18000000" MinHeight="700" MinWidth="900" Width="auto" >
        <control:LoadingAnimation x:Name="Loading" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden" Margin="476,284,580,469"  />
        <DockPanel MinWidth="700" LastChildFill="True" >
            <StackPanel x:Name="panelHeader" DockPanel.Dock="Top" HorizontalAlignment="Stretch"  >
                <StackPanel Panel.ZIndex="0" Orientation="Horizontal">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF1B1B7D" Offset="0" />
                            <GradientStop Color="#FF3D7EEC" Offset="1" />
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <StackPanel Panel.ZIndex="1" Width="700" Height="90" Orientation="Horizontal" >
                        <StackPanel.Background>
                            <ImageBrush ImageSource="Images/topAreaBG.png"/>
                        </StackPanel.Background>
                        <Image Source="Images/logo.png" Width="70" Height="70" HorizontalAlignment="Left" Margin="15,8,10,10" Opacity="100"/>
                        <TextBlock x:Name="txtTitulo" Text="Sincronização Musical" FontSize="45" FontWeight="Bold" Margin="60,15,0,0">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Silver" Offset="0.484" />
                                    <GradientStop Color="White" Offset="1" />
                                    <GradientStop Color="White" Offset="0" />
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="Footer" DockPanel.Dock="Bottom" Height="Auto">
                <StatusBar>
                    <StatusBar.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#60000000" Offset="0" />
                            <GradientStop Color="White" Offset="1" />
                        </LinearGradientBrush>
                    </StatusBar.Background>
                    <StatusBarItem Height="40" x:Name="statusBarMain" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MinWidth="200">
                        <ComboBox ItemsSource="{Binding}" Style="{StaticResource comboStyle}" SelectionChanged="AlterarUnidade" HorizontalAlignment="Left" x:Name="cbUnidade" VerticalAlignment="Top" Width="auto" MinWidth="200"  DisplayMemberPath="Nome" SelectedValuePath="UnidadeID" />
                    </StatusBarItem>
                    <StatusBarItem x:Name="ImportStatus"/>
                    <StatusBarItem>
                        <TextBlock x:Name="lblUsuario" Text="Usuário: "></TextBlock>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock x:Name="lblVersion" Text="Versão: " HorizontalAlignment="Right" ></TextBlock>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock x:Name="lblNumMusicas" Text="Nº Musicas: " HorizontalAlignment="Right" ></TextBlock>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock x:Name="lblTotalMinutagem" Text="Minutagem total: " HorizontalAlignment="Right" ></TextBlock>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock x:Name="lblTituloNacional" Text="Título: " HorizontalAlignment="Right" ></TextBlock>
                    </StatusBarItem>
                    <StatusBarItem>
                        <TextBlock x:Name="lblCapitulo" Text="Capitulo: " HorizontalAlignment="Right" ></TextBlock>
                    </StatusBarItem>
                </StatusBar>
            </StackPanel>
            <StackPanel x:Name="Menu" DockPanel.Dock="Left" Margin="0,10" Width="0" Height="auto"  Background="LightGray" Visibility="Hidden" IsEnabled="False" >
                <StackPanel Width="126" Background="White">
                    <Menu >
                        <System:String>Sonorização</System:String>
                    </Menu>
                    <Menu >
                        <System:String>Autorização</System:String>
                    </Menu>
                    <Menu >
                        <System:String>Importação</System:String>
                    </Menu>
                </StackPanel>
                <StackPanel Margin="0,10,0,0" Background="White">
                    <Menu MenuItem.Click="Menu_Click" >
                        <System:String>Fechar</System:String>
                    </Menu>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="10,10" MinWidth="700" MinHeight="300" Width="auto" Height="auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCBCBCB" Offset="0" />
                        <GradientStop Color="white" Offset="0.115" />
                    </LinearGradientBrush>
                </StackPanel.Background>
                <TabControl x:Name="tabControlGeral" Margin="0,10,0,0" Width="auto" MinWidth="700" MinHeight="400" SelectionChanged="tabControlGeral_SelectionChanged" 
                             HorizontalAlignment="Stretch"   HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch">
                    <TabItem x:Name="tabItemSincronizacao" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch">
                        <TabItem.Header>
                            <StackPanel x:Name="click" Orientation="Horizontal">
                                <Image Source="Images/music.png" Height="20" Width="20"/>
                                <TextBlock><Run Text="Sonorização"/></TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <!--Grid de painel de Sincronizacao/Sincronizacao-->
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Height="auto" >

                            <ToolBarTray x:Name="filtros" MinHeight="100" VerticalAlignment="Top" >
                                <ToolBar Band="1" BandIndex="1" ToolBarTray.IsLocked="True" Loaded="ToolBar_Loaded">

                                    <Label Content="Gênero" Height="28" HorizontalAlignment="Left" Margin="10,0,28,0" x:Name="label1" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}" Height="23"  HorizontalAlignment="Left"  x:Name="cbGenero" VerticalAlignment="Top" Width="195" 
                                              SelectionChanged="cbGeneroSonorizacao_SelectionChanged" ItemsSource="{Binding}" DisplayMemberPath = "Descricao"   SelectedValuePath="GeneroID" />

                                    <Label Content="Programa" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0"  x:Name="label2" VerticalAlignment="Top" />
                                    <ComboBox  Style="{StaticResource MultiSelectComboBox}" Height="23" HorizontalAlignment="Left" x:Name="cbPrograma" VerticalAlignment="Top" Width="195"
                                              ItemsSource="{Binding}"  SelectedValue="0" Text="--Todos--" SelectedValuePath="ProgramaID"/>

                                    <Label Content="de:"/>
                                    <DatePicker x:Name="datePickerInicial" BorderBrush="CornflowerBlue" SelectedDateFormat="Short" BorderThickness="1" Height="25" 
                                                HorizontalAlignment="Left" Margin="25,0,0,0"  VerticalAlignment="Top" Width="115" SelectedDate="{x:Static System:DateTime.Now}" 
                                                PreviewKeyDown="datePicker_PreviewKeyDown" PreviewMouseLeftButtonDown="datePicker_PreviewMouseLeftButtonDown" LostKeyboardFocus="datePicker_LostKeyboardFocus"
                                              />
                                    <Label Content="até:"/>
                                    <DatePicker x:Name="datePickerFinal" BorderBrush="CornflowerBlue" SelectedDateFormat="Short" BorderThickness="1" Height="25" 
                                                HorizontalAlignment="Left" Margin="10,0,0,0"  VerticalAlignment="Top" Width="115" SelectedDate="{x:Static System:DateTime.Now}" 
                                                PreviewKeyDown="datePicker_PreviewKeyDown" PreviewMouseLeftButtonDown="datePicker_PreviewMouseLeftButtonDown" LostKeyboardFocus="datePicker_LostKeyboardFocus"
                                                />
                                    <Button x:Name="btnPesquisar"  Click="PesquisarSonorizacoes" Margin="10,0,0,0" ToolTip="Pesquisar Sonorizações">
                                        <Image Source="Images/lupa.png" Height="20" Width="20">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.2" />
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Opacity" Value="1" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button>
                                </ToolBar>
                                <ToolBar Band="2" x:Name="toolbarClassificaSonorizacao" VerticalContentAlignment="Center" BandIndex="2" IsEnabled="False" Background="#DDD" ToolBarTray.IsLocked="True" Width="925"  Loaded="ToolBar_Loaded">
                                    <Label Content="Classificação" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="lblClassificacao" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}" Height="23"  HorizontalAlignment="Left"  x:Name="cbClassificacao" VerticalAlignment="Center" Width="195" 
                                              SelectionChanged="AlterarClassificacao" ItemsSource="{Binding}" DisplayMemberPath = "Descricao" SelectedValuePath="ClassificacaoID" />

                                    <Label Content="Exibição" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="lblTipoExibicao" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}" Height="23"  HorizontalAlignment="Left"  x:Name="cbTipoExibicao" VerticalAlignment="Center" Width="195" 
                                              SelectionChanged="AlterarTipoExibicao" ItemsSource="{Binding}" DisplayMemberPath = "Descricao" SelectedValuePath="TipoExibicaoID" />

                                    <Label Content="Quadro" Height="28" HorizontalAlignment="Left" Margin="0,0,0,0" x:Name="lblQuadro" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}" Height="23"  HorizontalAlignment="Left"  x:Name="cbQuadro" VerticalAlignment="Center" Width="196" 
                                              SelectionChanged="AlterarQuadro" ItemsSource="{Binding}" DisplayMemberPath = "Descricao" SelectedValuePath="QuadroID" />


                                </ToolBar>
                                <ToolBar Band="3" BandIndex="3" ToolBarTray.IsLocked="True"  Loaded="ToolBar_Loaded">
                                    <Label Content="Observação" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="lblObervacao" VerticalAlignment="Top" />
                                    <TextBox  Height="23"  HorizontalAlignment="Left"  x:Name="txtObservacao" VerticalAlignment="Top" Width="700" BorderThickness="2" BorderBrush="AliceBlue" />
                                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">

                                        <Button x:Name="btnAprovar" Click="AprovarSincronizacao" Margin="10,0,0,0" ToolTip="Aprovar Sonorização" >
                                            <Image x:Name="imgBtnAprovar" Source="Images/ok.png" Height="20" Width="20">
                                                <Image.Style>
                                                    <Style TargetType="{x:Type Image}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.2" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Button>
                                        <Button x:Name="btnTrancar" Visibility="Hidden" Click="ReabrirAprovacao" Margin="10,0,0,0" ToolTip="Reabrir Sonorização" >
                                            <Image Source="Images/unlock.png" x:Name="imgBtnTrancar" Height="20" Width="20">
                                                <Image.Style>
                                                    <Style TargetType="{x:Type Image}">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.2" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Button>
                                    </StackPanel>
                                </ToolBar>
                            </ToolBarTray>

                            <!--Grid de exibições-->
                            <DockPanel x:Name="dockGridsSincronizacao" Margin="0,110,10,0" VerticalAlignment="Stretch" Grid.Row="0" MinHeight="200">
                                <DataGrid x:Name="dgExibicoes" AutoGenerateColumns="False" BorderThickness="1" ScrollViewer.CanContentScroll="True"  
                                          MinHeight="300" MinWidth="320" Width="auto"
                                          HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,10,0,10" 
							              VerticalContentAlignment="Center" ItemsSource="{Binding}" AlternationCount="2" RowBackground="LightGray" 
							              AlternatingRowBackground="Lavender" ColumnHeaderStyle="{StaticResource columnHeaderStyle}" GridLinesVisibility="All" 
									      VerticalGridLinesBrush="{StaticResource GridLine}" HorizontalGridLinesBrush="{StaticResource GridLine}" HorizontalContentAlignment="Stretch"
									      SelectedCellsChanged="ExibirSonorizacoes" SelectionUnit="FullRow" CanUserAddRows="False" CanUserDeleteRows="False"
                                          									      IsSynchronizedWithCurrentItem="True"  >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn x:Name="columnID" Binding="{Binding SincronizacaoID}" IsReadOnly="True" Visibility="Hidden"/>

                                        <DataGridTextColumn Header="PROGRAMA" x:Name="columnNome" Binding="{Binding Exibicao.Programa.Nome}" IsReadOnly="True" MinWidth="150" Width="auto"/>

                                        <DataGridTextColumn Header="DATA" x:Name="columnData" Binding="{Binding Exibicao.Data, StringFormat=\{0:dd/MM/yyyy\}}" IsReadOnly="True" MinWidth="100" Width="auto"/>
                                        <DataGridTemplateColumn  Header="STATUS" x:Name="columnAprovacao" IsReadOnly="True" MinWidth="30" Width="auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image x:Name="ImageAprovacao" Source="" Width="20" Height="20"/>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding PreAprovado}" Value="true">
                                                            <Setter TargetName="ImageAprovacao" Property="Source" Value="Images/tick.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Aprovado}" Value="true">
                                                            <Setter TargetName="ImageAprovacao" Property="Source" Value="Images/ok.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Aberto}" Value="true">
                                                            <Setter TargetName="ImageAprovacao" Property="Source" Value="Images/warning.png"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--Grid de Musicas captadas-->
                                <DataGrid x:Name="dgMusicas" AutoGenerateColumns="False" CanUserAddRows="False"
                                              MinHeight="300" MinWidth="300" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                          Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True" 
									  ItemsSource="{Binding}" AlternationCount="2" RowBackground="LightGray" AlternatingRowBackground="Lavender"
									  ColumnHeaderStyle="{StaticResource columnHeaderStyle}" BorderThickness="1" GridLinesVisibility="All" 
									  VerticalGridLinesBrush="{StaticResource GridLine}" HorizontalGridLinesBrush="{StaticResource GridLine}" 
                                          HorizontalContentAlignment="Stretch"
                                      PreviewKeyDown="dgMusicas_PreviewKeyDown" CanUserDeleteRows="False" SelectionChanged="dgMusicas_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn x:Name="alteradaColumn" Header="" Visibility="Hidden" Width="10" CanUserReorder="False" CanUserSort="False" >
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate >
                                                    <Image x:Name="alteradaColumnImage" Width="15" />
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Sonorizacao.Importacao.ImportadoVetrix}" Value="false">
                                                            <Setter TargetName="alteradaColumnImage" Property="Source" Value="Images/import.png" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Sonorizacao.Alterada}" Value="true">
                                                            <Setter TargetName="alteradaColumnImage" Property="Source" Value="Images/alterada.png" />
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="USER" x:Name="columnAlteracaoUsuario" Visibility="Hidden" Binding="{Binding Sonorizacao.AlteradaPor}" IsReadOnly="True" MinWidth="60" Width="auto"/>
                                        <DataGridTextColumn Header="RESPONSAVEL" x:Name="columnUsuario" Visibility="Hidden" Binding="{Binding Usuario.Login}" IsReadOnly="True" MinWidth="60" Width="auto"/>
                                        <DataGridTextColumn Header="TRILHA" x:Name="columnTitulo" Binding="{Binding Sonorizacao.Musica.Titulo}" IsReadOnly="True" MinWidth="60" Width="auto"/>
                                        <DataGridTextColumn Header="INTERPRETE" x:Name="columnInterpretes" Binding="{Binding Sonorizacao.Musica.Interprete.Nome}" IsReadOnly="True" MinWidth="100" Width="auto"/>
                                        <DataGridTextColumn Header="AUTOR" x:Name="columnAutor" Binding="{Binding Sonorizacao.Musica.Autor.Nome}" IsReadOnly="True" MinWidth="100" Width="auto"/>
                                        <!--TODO: Adicionar coluna de autor na grid de musicas captadas-->
                                        <DataGridTextColumn Header="DURACAO" x:Name="columnDURACAO" IsReadOnly="True" MinWidth="80" Width="auto" Binding="{Binding Sonorizacao.Minutagem, StringFormat=mm\\:ss}"/>
                                        <DataGridTextColumn Header="CAPTACAO" x:Name="columnCAPTACAO" IsReadOnly="True" MinWidth="80" Width="auto" Binding="{Binding Sonorizacao.Captacao, StringFormat=hh\\:mm\\:ss}"/>
                                        <DataGridTextColumn Header="CLASSIFICAÇÃO" x:Name="columnCLASS" Binding="{Binding Sonorizacao.Classificacao.Descricao}" IsReadOnly="True" MinWidth="100" Width="auto" />
                                        <DataGridTextColumn Header="TIPO EXIBIÇÃO" x:Name="columnTipoExibicao" Binding="{Binding Sonorizacao.TipoExibicao.Descricao}" IsReadOnly="True" MinWidth="100" Width="auto" />
                                        <DataGridTextColumn Header="QUADRO" x:Name="columnQuadro" Binding="{Binding Sonorizacao.Quadro.Descricao}" IsReadOnly="True" MinWidth="100" Width="auto" />
                                        <DataGridTextColumn Header="ISRC" x:Name="columnISRC" Binding="{Binding Sonorizacao.Musica.ISRC}" IsReadOnly="True" MinWidth="50" Width="auto" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="tabItemAutorizacao" Loaded="LimparTabAutorizacao">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="Images/document.png" Height="20" Width="20"/>
                                <TextBlock><Run Text="Autorização"/></TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <!--Grid de painel de Sincronizacao/Sincronizacao-->
                        <Grid HorizontalAlignment="Stretch" x:Name="gridTabSonorizacao" VerticalAlignment="Stretch" Margin="0,0,0,0" MinHeight="400">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition MinHeight="100" />
                            </Grid.RowDefinitions>
                            <ToolBarTray x:Name="filtrosAut" VerticalAlignment="Top" >
                                <ToolBar Band="1" BandIndex="1" ToolBarTray.IsLocked="True" Loaded="ToolBar_Loaded"  Width="800">

                                    <Label Content="Gênero" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="lblGenAut" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}" Height="23"  HorizontalAlignment="Left"  x:Name="cbGeneroAut" VerticalAlignment="Top" Width="195" 
                                              SelectionChanged="cbGeneroAutorizacao_SelectionChanged" ItemsSource="{Binding}" DisplayMemberPath = "Descricao"   SelectedValuePath="GeneroID" />

                                    <Label Content="Programa" Height="28" HorizontalAlignment="Left" Margin="10,0,0,0"  x:Name="lblProgAut" VerticalAlignment="Top" />
                                    <ComboBox Style="{StaticResource comboStyle}"  Height="23" HorizontalAlignment="Left" x:Name="cbProgramaAut" VerticalAlignment="Top" Width="195"
                                              ItemsSource="{Binding}" SelectedValue="0" Text="--Todos--" DisplayMemberPath = "Nome" SelectedValuePath="ProgramaID"
                                              />

                                    <Label  Margin="10,0,0,0"  Content="a partir de:" />
                                    <DatePicker x:Name="datePickerInicialAut" BorderBrush="CornflowerBlue" SelectedDateFormat="Short" BorderThickness="1" Height="25" 
                                                HorizontalAlignment="Left" Margin="7,0,0,0"  VerticalAlignment="Top" Width="127" SelectedDate="{x:Static System:DateTime.Now}" 
                                                PreviewKeyDown="datePicker_PreviewKeyDown" PreviewMouseLeftButtonDown="datePicker_PreviewMouseLeftButtonDown" 
                                                LostKeyboardFocus="datePicker_LostKeyboardFocus"/>

                                    <Button x:Name="btnPesquisarAut"  Click="PesquisarAutorizacoes" Margin="10,0,0,0" ToolTip="Pesquisar Autorizações" >
                                        <Image Source="Images/lupa.png" Height="20" Width="20"/>
                                    </Button>
                                </ToolBar>
                                <ToolBar x:Name="toolbarRegistraAutorizacao" IsEnabled="False" Band="2" BandIndex="2" ToolBarTray.IsLocked="True" Background="#DDD" Width="1100">

                                    <Label VerticalAlignment="Center" Margin="10,0,0,0" Content="Editora:" />
                                    <ComboBox  VerticalAlignment="Center" x:Name="cbPagEditora"  Height="20" Width="193" 
                          ItemsSource="{Binding}" DisplayMemberPath = "Nome"   SelectedValuePath="EditoraID" SelectionChanged="cbPagEditora_SelectionChanged"/>
                                    <Label VerticalAlignment="Center" Margin="10,0,0,0"  Content="Valor:"  />
                                    <ComboBox VerticalAlignment="Center" x:Name="cbPagValor" Height="20" Width="60" Language="pt-BR" ItemStringFormat="N2"
                          ItemsSource="{Binding ''}" DisplayMemberPath = "Valor"   SelectedValuePath="PrecoID"/>
                                    <Label VerticalAlignment="Center" Margin="10,0,0,0" Content="Porcentagem:" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="txtPagPorcentagem" Height="20"  Width="43" HorizontalAlignment="Left" LostKeyboardFocus="HabilitaPoutPourri"/>
                                        <Label VerticalAlignment="Center" Content="%"/>
                                    </StackPanel>
                                    <Label VerticalAlignment="Center" Margin="10,0,0,0" Content="Vencimento:" />
                                    <DatePicker x:Name="dtPagVencimento" BorderBrush="CornflowerBlue" SelectedDateFormat="Short" BorderThickness="1" Height="25" 
                                                VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,0" SelectedDate="{x:Static System:DateTime.Now}" 
                                                PreviewKeyDown="datePicker_PreviewKeyDown" PreviewMouseLeftButtonDown="datePicker_PreviewMouseLeftButtonDown" LostKeyboardFocus="datePicker_LostKeyboardFocus"/>
                                    <Label VerticalAlignment="Center" Margin="10,0,0,0" Content="Arquivo:"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="txtPagArquivo" Height="20" VerticalAlignment="Center" Width="160"/>
                                        <Button x:Name="btnProcurarArquivo" VerticalAlignment="Center" Width="25" Height="20" Margin="5,0,0,0" Content="..." Click="ProcurarArquivoAutorizacao"/>
                                    </StackPanel>
                                    <Button x:Name="btnSalvarAutorizacao"  Height="25" Width="25" Margin="5" Click="SalvarAutorizacao" ToolTip="Salvar Autorização"  >
                                        <Image Source="Images/save.png" Height="20" Width="20">
                                            <Image.Style>
                                                <Style TargetType="{x:Type Image}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Opacity" Value="0.2" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button>
                                </ToolBar>

                                <ToolBar Band="3" BandIndex="3" ToolBarTray.IsLocked="True" Width="800">

                                    <Label x:Name="lblPagAdicional" Visibility="Hidden" Content="Adicional:"/>
                                    <StackPanel x:Name="panelPagPoutPourri" IsEnabled="False" Orientation="Horizontal" >
                                        <CheckBox x:Name="chkPagIncidental" Margin="5" Unchecked="ChkPagIncidental_OnUnchecked" Checked="ChkPagIncidental_OnChecked" Content="Incidental"/>
                                        <CheckBox x:Name="chkPagPoutPourri" Margin="5" Background="Green" Unchecked="ChkPagPoutPourri_OnUnchecked" Checked="ChkPagPoutPourri_OnChecked" Content="Pout Pourri"/>
                                    </StackPanel>
                                </ToolBar>
                            </ToolBarTray>

                            <!--Grid de exibições-->
                            <DockPanel x:Name="dockGridsAutorizacoes" Margin="0,100,10,0" VerticalAlignment="Stretch" Grid.Row="0">

                                <DataGrid x:Name="dgAutProgramas" AutoGenerateColumns="False" BorderThickness="1" ScrollViewer.CanContentScroll="True"  
                                          MinHeight="300" MinWidth="250" Width="auto"
                                          HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,10,0,10" 
							              VerticalContentAlignment="Center" ItemsSource="{Binding}" AlternationCount="2" RowBackground="LightGray" 
